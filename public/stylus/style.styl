/* Background provided by http://subtlepatterns.com
 * ====================== */
bg-image = false
support-for-ie = true

opacity(n) {
    -khtml-opacity: n;
    -moz-opacity: n;
    opacity: n;
    if support-for-ie {
        -ms-filter: unquote('"progid:DXImageTransform.Microsoft.Alpha(Opacity=' + round(n * 100) + ')"');
        filter: unquote('alpha(opacity=' + round(n * 100) + ')');
    }
}

body {
    padding-top: 65px;

    // background-color: #1A1A18; // poe color

    if bg-image {
        background-image: url("../img/paper_fibers.png");
        background-size: auto;
        background-repeat: repeat repeat;
    }
}

@media screen and (max-width: 768px) {
    body { padding-top: 0; }
}

