extends layout

block content
    div.container
        h1= title
        p Hello World!

        div.alert.alert-info
            b TODO:&nbsp;
            br
            | &raquo; Implement implicit mods and values
            br
            | &raquo; Implement min and max damage values

        hr

        each item, type in armour
            h3= type

            table.table.table-striped.table-bordered.table-hover.table-condensed
                thead
                    tr
                        th Name
                        th Level
                        th Armour
                        th Evasion Rating
                        th Energy Shield
                        th Req Str
                        th Req Dex
                        th Req Int

                tbody
                    for o in item
                        tr
                            td#item-name(data-type=type)
                                img.pull-left.small-img(src=o.smallImg)
                                a.ez(href="#")= o.name
                                    span.ez
                                        img(src=o.largeImg)
                            td= o.lvl
                            td= o.armour
                            td= o.evasion
                            td= o.es
                            td= o.reqStr
                            td= o.reqDex
                            td= o.reqInt

block scripts
    script.
        $(document).on("click", "#item-name", function(e) {
            e.preventDefault();
        });